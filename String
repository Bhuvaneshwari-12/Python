
#String are immutable

#Creating a String
# either single or double quotes
a='Hello'
b="Python"
print(a)
print(b)

#multi-line
c='''Hi
Hello
Python'''
print(c)

#String slicing
print(a[0:3])

#String iteration
for char in a:
    print(char)
    
d="h"+a[1:]
print(d)

#updating a string
e=a.replace("Hello","hi")
print(e)

#common String methods
print(len(e))

print(a.upper())
print(b.lower())

f="    Google    "
print(f.strip())

g= a+" "+b
print(g)

h=(a*3)
print(h)

#formatting strings
name="Alice"
age=12
print(f"Name:{name}, Age:{age}")

i="My name is {}".format("alice")
print(i)

#String membership testing
print ("python" in b)

#String comparison 
print(a<b)

#case-insensitive comparison
s1="people"
s2="PEOPLE"
print(s1.lower()==s2.lower())

#using startswith() and endswith() methods
print(i.startswith("My"))
