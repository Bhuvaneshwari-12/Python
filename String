
#String are immutable

#Creating a String
# either single or double quotes
a='Hello'
b="Python"
print(a) //Hello
print(b) //Python

#multi-line
c='''Hi
Hello
Python'''
print(c)
//Hi
Hello
Python

#String slicing
print(a[0:3])  //Hel

#String iteration
for char in a:
    print(char)

//H
e
l
l
o
    
d="h"+a[1:]
print(d) //hello

#updating a string
e=a.replace("Hello","hi")
print(e) //hi

#common String methods
print(len(e)) //2

print(a.upper())  //HELLO
print(b.lower()) //python

f="    Google    "
print(f.strip())  //Google

g= a+" "+b
print(g)  //Hello Python

h=(a*3)
print(h)  //HelloHelloHello

#formatting strings
name="Alice"
age=12
print(f"Name:{name}, Age:{age}") //Name:Alice, Age:12

i="My name is {}".format("alice")
print(i)  //My name is alice

#String membership testing
print ("python" in b)  //False

#String comparison 
print(a<b)  //True

#case-insensitive comparison
s1="people"
s2="PEOPLE"
print(s1.lower()==s2.lower())  //True

#using startswith() and endswith() methods
print(i.startswith("My"))  //True
